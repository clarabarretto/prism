# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single

[package.json]
indent_style = tab
indent_size = 4

[*.yml]
indent_style = tab
indent_size = 4

[*.yaml]
indent_style = tab
indent_size = 4
